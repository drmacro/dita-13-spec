  <moduleMetadata>
    <moduleType>topicshell</moduleType>
    <moduleShortName>Glossary Entry</moduleShortName>
    <shellPublicIds>
      <dtdShell>-//OASIS//DTD DITA Glossary Entry//EN</dtdShell>
      <rncShell>urn:oasis:names:tc:dita:rnc:glossentry.rnc</rncShell>
