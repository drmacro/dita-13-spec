    <moduleMetadata>
      <moduleType>topicshell</moduleType>
      <moduleShortName>learningSummary</moduleShortName>
      <shellPublicIds>
        <dtdShell>-//OASIS//DTD DITA Learning Summary//EN</dtdShell>
        <rncShell>urn:oasis:names:tc:dita:rnc:learningSummary.rnc</rncShell>
